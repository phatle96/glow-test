{
  "name": "@tryglow/glow",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/tryglow/glow.git",
  "workspaces": [
    "app.*",
    "package.*"
  ],
  "type": "module",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "ts-node": "^10.9.2",
    "turbo": "^2.3.1"
  },
  "scripts": {
    "lint": "turbo lint",
    "dev": "turbo dev",
    "dev:migrate": "dotenvx run -f .env.local -- prisma migrate dev --schema ./package.prisma/prisma/schema.prisma",
    "dev:seed": "dotenvx run -f .env.local -- tsx ./package.prisma/prisma/seed.ts"
  },
  "packageManager": "npm@10.2.0"
}
