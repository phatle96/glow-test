{
  "name": "@tryglow/api",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@auth/core": "^0.34.1",
    "@auth/express": "^0.8.4",
    "@aws-sdk/client-dynamodb": "^3.693.0",
    "@aws-sdk/client-s3": "^3.693.0",
    "@aws-sdk/lib-dynamodb": "^3.693.0",
    "@aws-sdk/lib-storage": "^3.693.0",
    "@dotenv-run/esbuild": "^1.4.0",
    "@dotenvx/dotenvx": "^1.24.0",
    "@fastify/basic-auth": "^6.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/express": "^4.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/sensible": "^6.0.1",
    "@novu/node": "^2.0.5",
    "@opentelemetry/instrumentation": "^0.56.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@sentry/cli": "2.28.0",
    "@sentry/node": "^8.10.0",
    "@sentry/types": "^8.7.0",
    "@tryglow/blocks": "*",
    "@tryglow/prisma": "*",
    "axios": "^1.7.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "esbuild": "^0.21.3",
    "fastify": "^5.1.0",
    "fastify-cli": "^7.0.1",
    "fastify-raw-body": "^5.0.0",
    "loops": "^3.4.0",
    "posthog-node": "^4.2.2",
    "safe-await": "^2.0.0",
    "sharp": "^0.33.5",
    "stripe": "^17.3.1",
    "tsx": "^4.16.0",
    "zod": "^3.2"
  },
  "devDependencies": {
    "fastify-tsconfig": "^2.0.0",
    "typescript": "^5"
  },
  "scripts": {
    "dev": "dotenvx run -f ../.env.local -- tsx watch src",
    "start:api": "dotenvx run -f ../.env.local -- node dist/index.js",
    "build:api": "dotenvx run -f ../.env.local -- node build.js",
    "build:api-sentry": "node build.js && npm run sentry:sourcemaps",
    "prisma:generate": "dotenvx run -f ../.env.local -- prisma generate --schema ../package.prisma/prisma/schema.prisma",
    "prisma:migrate": "dotenvx run -f ../.env.local -- prisma migrate deploy --schema ../package.prisma/prisma/schema.prisma",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org hyperdusk --project glow-api ./dist && sentry-cli sourcemaps upload ./dist --org hyperdusk --project glow-api"
  }
}
